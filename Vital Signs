    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #111;
            color: #0f0;
            text-align: center;
            padding: 20px;
        }
        h1 {
            text-decoration: underline;
        }
        .status {
            font-size: 1.1em;
            margin: 15px 0;
        }
        .bar-container {
            width: 80%;
            background-color: #222;
            border-radius: 10px;
            margin: 10px auto;
            overflow: hidden;
            height: 25px;
            position: relative;
        }
        .bar {
            height: 100%;
            text-align: center;
            line-height: 25px;
            color: #000;
            font-weight: bold;
            position: absolute;
            left: 0;
            top: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9em;
        }
    </style>
    <script>
        const vitalSigns = {
            happiness: 35,
            vision: 100,
            balance: 100,
            brain: 85,
            awareness: 85,
            compassion: 90,
            alertness: 90,
            alcohol: 0,
            horny: 45,
            energy: 55,
            stress: 45,
            confidence: 65,
            caffeine: 15,
            gaming: 50,
            dancing: 10,
            luck: 25,
            jokes: 90,
            submissiveness: 60
        };

        function setBarLevel(barId, level) {
            const bar = document.getElementById(barId);
            const widthPercentage = (level / 100) * 100;
            bar.style.width = widthPercentage + "%";

            if (level > 7) {
                bar.style.backgroundColor = "#0f0";
            } else if (level > 4) {
                bar.style.backgroundColor = "#ff0";
            } else {
                bar.style.backgroundColor = "#f00";
            }
        }

        function initializeReport() {
            for (const sign in vitalSigns) {
                const level = vitalSigns[sign];
                const barId = `${sign}-bar`;
                const barLabel = document.getElementById(`${sign}-label`);
                setBarLevel(barId, level);
                barLabel.textContent = `${capitalizeFirstLetter(sign)}: ${level}%`;
            }
        }

        function capitalizeFirstLetter(str) {
            return str.charAt(0).toUpperCase() + str.slice(1);
        }

        window.onload = initializeReport;
    </script>
</head>
